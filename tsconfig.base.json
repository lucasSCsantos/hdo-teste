{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hdo-teste-tecnico/prisma": ["./generated/prisma/"],
      "@hdo-teste-tecnico/prisma/*": ["./generated/prisma/*"],
      "@hdo-teste-tecnico/mongo-client": ["libs/shared/mongo/src/index.ts"],
      "@hdo-teste-tecnico/prisma-client": ["libs/shared/prisma/src/index.ts"]
    },
    "types": ["node"]
  },
  "include": ["**/*.ts", "generated/**/*", "libs/**/*"],
  "exclude": ["node_modules", "tmp"]
}
