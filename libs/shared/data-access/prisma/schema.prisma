generator client {
  provider = "prisma-client"
  output   = "../src/lib/generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  name         String
  refreshToken String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("users")
}

model Patient {
  id           Int           @id @default(autoincrement())
  name         String
  document          String        @unique
  phone        String?
  appointments Appointment[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@map("patients")
}

model Procedure {
  id           Int           @id @default(autoincrement())
  description  String
  durationMin  Int           // em minutos, exemplo: 30, 90...
  appointments Appointment[]
  createdAt    DateTime      @default(now())

  @@map("procedures")
}

model Appointment {
  id              Int        @id @default(autoincrement())
  patientId       Int
  procedureId     Int
  startTime       DateTime
  endTime         DateTime   // startTime + durationMin
  status          String     @default("SCHEDULED") // SCHEDULED, CANCELED
  cancellationReason String? // Obrigat√≥rio se cancelado

  patient         Patient    @relation(fields: [patientId], references: [id])
  procedure       Procedure  @relation(fields: [procedureId], references: [id])

  createdAt       DateTime   @default(now())

  @@map("appointments")
}

enum AppointmentStatus {
  SCHEDULED
  CANCELED
}