generator client {
  provider = "prisma-client"
  output   = "../prisma-audit/generated/prisma"
}

datasource db {
  provider = "mongodb"
}

model AuditLog {
  id        String        @id @map("_id") @db.ObjectId
  action    String        // LOGIN, CREATE_APPOINTMENT, CANCEL_APPOINTMENT
  userId    String?       // ID do usuário que realizou a ação
  details   String?       // Motivo do cancelamento ou dados do agendamento
  timestamp DateTime      @default(now())

  @@map("audit_logs")
}

enum LogActions {
  LOGIN
  CREATE_APPOINTMENT
  CANCEL_APPOINTMENT
}